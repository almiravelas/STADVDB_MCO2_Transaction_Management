        <!-- 6. HEALTH SECTION -->
        <section id="health-section" class="content-section">
            <div class="card-clean">
                <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:10px;">
                    <h2>System Health</h2>
                    <button class="btn-refresh" onclick="updateStats()">
                        <i class='bx bx-refresh'></i> Refresh
                    </button>
                </div>

                <!-- Global System Status -->
                <div id="globalStatusCard" style="margin-top:20px; padding:20px; border-radius:15px; background:linear-gradient(135deg, #E2FBD7 0%, #d4f5c9 100%); border:2px solid #34B53A;">
                    <div style="display:flex; align-items:center; gap:15px; flex-wrap:wrap;">
                        <div id="globalStatusIcon" style="width:50px; height:50px; border-radius:50%; background:#34B53A; display:flex; align-items:center; justify-content:center; flex-shrink:0;">
                            <i class='bx bx-check-circle' style="font-size:30px; color:white;"></i>
                        </div>
                        <div>
                            <h3 id="globalStatusText" style="margin:0; color:#2B3674;">All Systems Operational</h3>
                            <p id="globalStatusDesc" style="margin:5px 0 0 0; font-size:13px; color:#666;">All nodes connected. No pending recovery.</p>
                        </div>
                    </div>
                </div>

                <!-- Recovery Monitor Status -->
                <div style="margin-top:20px; padding:15px 20px; background:#f8f9ff; border-radius:12px; border:1px solid #e0e5f2;">
                    <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:10px;">
                        <div style="display:flex; align-items:center; gap:10px;">
                            <i class='bx bx-time-five' style="font-size:24px; color:#6C5CE7;"></i>
                            <div>
                                <span style="font-weight:600; color:#2B3674;">Recovery Monitor</span>
                                <span id="monitorStatus" style="margin-left:10px; padding:3px 10px; border-radius:10px; font-size:11px; font-weight:600; background:#E2FBD7; color:#34B53A;">ACTIVE</span>
                            </div>
                        </div>
                        <div style="display:flex; gap:15px; flex-wrap:wrap;">
                            <span style="font-size:12px; color:#A3AED0;">Interval: <strong id="monitorInterval">10s</strong></span>
                            <span style="font-size:12px; color:#A3AED0;">Last: <strong id="lastCheckTime">--</strong></span>
                        </div>
                    </div>
                </div>

                <!-- Node Cards -->
                <div class="node-grid" style="display:grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap:20px; margin-top:20px;">
                    <div class="card-clean" style="text-align:center; box-shadow:0 10px 30px rgba(0,0,0,0.05); border:2px solid #7C3AED;">
                        <i class='bx bx-server' style="font-size:40px; color:#7C3AED;"></i>
                        <h3 style="margin:10px 0 5px 0; color:#7C3AED;">MASTER</h3>
                        <p style="font-size:12px; color:#A3AED0; margin-bottom:15px;">Central Node (All Data)</p>
                        <span id="node0Status" style="background:#E2FBD7; color:#34B53A; padding:5px 12px; border-radius:15px; font-weight:600; font-size:12px;">Connected</span>
                        <div id="masterQueueStatus" style="margin-top:10px; padding:8px; background:#fff8e6; border-radius:8px; font-size:12px; color:#FFA500;">
                            <i class='bx bx-time'></i> Queue: <span id="masterQueueCount">0</span> pending
                        </div>
                    </div>
                    <div class="card-clean" style="text-align:center; box-shadow:0 10px 30px rgba(0,0,0,0.05);">
                        <i class='bx bx-hdd' style="font-size:40px; color:#FF6B9D;"></i>
                        <h3 style="margin:10px 0 5px 0; color:#2B3674;">Slave 1</h3>
                        <p style="font-size:12px; color:#A3AED0; margin-bottom:15px;">A-L Countries</p>
                        <span id="node1Status" style="background:#E2FBD7; color:#34B53A; padding:5px 12px; border-radius:15px; font-weight:600; font-size:12px;">Connected</span>
                        <div style="margin-top:10px; font-size:11px; color:#A3AED0;">→ <span id="slave1PendingCount">0</span> writes pending</div>
                    </div>
                    <div class="card-clean" style="text-align:center; box-shadow:0 10px 30px rgba(0,0,0,0.05);">
                        <i class='bx bx-hdd' style="font-size:40px; color:#FF6B9D;"></i>
                        <h3 style="margin:10px 0 5px 0; color:#2B3674;">Slave 2</h3>
                        <p style="font-size:12px; color:#A3AED0; margin-bottom:15px;">M-Z Countries</p>
                        <span id="node2Status" style="background:#E2FBD7; color:#34B53A; padding:5px 12px; border-radius:15px; font-weight:600; font-size:12px;">Connected</span>
                        <div style="margin-top:10px; font-size:11px; color:#A3AED0;">→ <span id="slave2PendingCount">0</span> writes pending</div>
                    </div>
                </div>

                <!-- Pending Writes Detail (Master's Queue) -->
                <div id="pendingWritesSection" style="margin-top:20px; display:none;">
                    <h3 style="color:#2B3674; margin-bottom:15px;"><i class='bx bx-list-ul' style="margin-right:8px;"></i>Master's Pending Writes</h3>
                    <p style="font-size:12px; color:#A3AED0; margin:-10px 0 15px 0;">Writes queued on Master awaiting replication to Slaves</p>
                    <div id="pendingWritesList" style="background:#fff8e6; border:1px solid #ffc107; border-radius:12px; padding:15px; max-height:200px; overflow-y:auto;">
                        <!-- Pending writes will be listed here -->
                    </div>
                </div>

                <!-- Recovery Log -->
                <div style="margin-top:20px;">
                    <h3 style="color:#2B3674; margin-bottom:15px;"><i class='bx bx-history' style="margin-right:8px;"></i>Recovery Activity Log</h3>
                    <div id="recoveryLog" style="background:#f8f9ff; border-radius:12px; padding:15px; max-height:150px; overflow-y:auto; font-family:monospace; font-size:12px; color:#666;">
                        <div style="color:#aaa; text-align:center;">No recent recovery activity</div>
                    </div>
                </div>
            </div>
        </section>
